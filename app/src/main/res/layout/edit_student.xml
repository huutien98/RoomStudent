<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Edit Student"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView

        app:layout_constraintBottom_toTopOf="@+id/massvEdit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:id="@+id/img_avatarEdit"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_nameEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_avatarEdit"
        android:id="@+id/massvEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintBottom_toTopOf="@+id/edt_birthdayEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/massvEdit"
        android:hint="Name"
        android:id="@+id/edt_nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintBottom_toTopOf="@+id/edt_addressEdit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nameEdit"
        android:text="2019/10/02"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/edt_birthdayEdit"
        android:layout_width="0dp"
        android:layout_height="50dp"/>
    <EditText
        app:layout_constraintBottom_toTopOf="@+id/edt_specializedEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_birthdayEdit"
        android:hint="Address"
        android:id="@+id/edt_addressEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_addressEdit"
        android:hint="specialized"
        android:id="@+id/edt_specializedEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        app:layout_constraintBottom_toTopOf="@+id/btn_doneEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_specializedEdit"
        android:gravity="left"
        android:orientation="vertical"
        android:id="@+id/rd_genderEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:checked="true"
            android:id="@+id/btn_maleEdit"
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/btn_femaleEdit"
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_done"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:id="@+id/btn_doneEdit"
        app:layout_constraintRight_toLeftOf="@+id/btn_cancelEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rd_genderEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_cancelEdit"
        android:src="@drawable/ic_close"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_doneEdit"
        app:layout_constraintTop_toBottomOf="@+id/rd_genderEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>